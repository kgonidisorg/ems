# Dockerfile for EMS MQTT Telemetry Simulator
# Location: infrastructure/docker/ems-mqtt-telemetry-simulator.Dockerfile

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy simulator script
COPY seed_telemetry.py ./seed_telemetry.py
COPY weekly_db_cleanup.py ./weekly_db_cleanup.py

ENV PYTHONUNBUFFERED=1

ENTRYPOINT ["sh", "-c", "\
  if [ \"$APPLICATION_TYPE\" = \"telemetry_publisher\" ]; then \
  python ./seed_telemetry.py; \
  elif [ \"$APPLICATION_TYPE\" = \"db_cleanup\" ]; then \
  python ./weekly_db_cleanup.py; \
  else \
  echo 'Unknown APPLICATION_TYPE'; exit 1; \
  fi \
  "]